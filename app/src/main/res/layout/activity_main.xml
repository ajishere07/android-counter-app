<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/counter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/btn_container_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/counter_id"
        app:layout_constraintStart_toStartOf="@+id/counter_id"
        app:layout_constraintTop_toBottomOf="@+id/counter_id">

        <Button
            android:id="@+id/increase_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/decrease_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>